<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>Review Queue</title>
  <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="${request.static_url('backend:static/css/semantic.min.css')}">
  <link rel="stylesheet" type="text/css" href="${request.static_url('backend:static/css/main.css')}">
</head>
<body id="home">
  <div class="ui page grid">
    <div class="eleven wide column">
      <h1>Submitted Reviews (${len(user.reviews)})</h1>
      <table class="ui table segment sortable">
        <thead>
          <tr>
            <th class="descending">Age</th>
            <th>State</th>
            <th class="eight wide">Title</th>
            <th><i class="chat icon"></i></th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="review user.reviews">
            <td data-sort-value="${review.age.split(' ')[0]}">${review.age}</td>
            <td>${review.state}</td>
            <td><a href="${review.url}">${review.title}</a></td>
            <td>${len(review.votes)}</td>
          </tr>
        </tbody>
      </table>
      <h1>Charms Reviewed (${len(user.reviews)})</h1>
      <table class="ui table segment sortable">
        <thead>
          <tr>
            <th class="descending">Age</th>
            <th>State</th>
            <th class="eight wide">Title</th>
            <th><i class="chat icon"></i></th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="review user.reviews">
            <td>${review.age}</td>
            <td>${review.state}</td>
            <td><a href="${review.url}">${review.title}</a></td>
            <td>${len(review.votes)}</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="five wide column">
      <h1>${user.name} <div class="ui green label">Charmer</div></h1>
      <center><img src="https://api.launchpad.net/1.0/~${user.profiles[0].username}/mugshot"></center>
      <h2>Profiles</h2>
      <table class="ui table segment">
        <thead>
          <tr>
            <th colspan=2>LaunchPad</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Username</td>
            <td><a href="${user.profiles[0].url}">~${user.profiles[0].username}</a></td>
          </tr>
        </tbody>
      </table>
      <table class="ui table segment">
        <thead>
          <tr>
            <th colspan=2>Github</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Username</td>
            <td><a href="${user.profiles[0].url}">${user.profiles[0].username}</a></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js"></script>
  <script src="${request.static_url('backend:static/javascript/semantic.min.js')}"></script>
  <script src="${request.static_url('backend:static/javascript/jquery.tablesort.min.js')}"></script>
  <script src="${request.static_url('backend:static/javascript/main.js')}"></script>
  <script type="text/javascript">
  </script>
</body>
</html>
